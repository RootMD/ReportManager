{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Its a mee mario' }}
{% endblock %}

{% block stylesheets %}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
     ul {
         list-style-type: none;
         margin: 0;
         padding: 0;
         overflow: hidden;
         background-color: #333;
     }

    li {
        float: left;
    }

    li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover {
        background-color: #111;
    }

    .bar-right{
        float: right;
    }

</style>
{% endblock %}
{% block body %}
    <ul>
    <li><a class="active" href="#home">Home</a></li>
    <li class="bar-right"><a href={{ path('addReport') }}>Add</a></li>
    </ul>
    <table>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Rapport</th>
        </tr>
        {% for report in reports %}
            <tr>
                <td>{{ report.date }}</td>
                <td>{{ report.time }}</td>
                <td>{{ report.content }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
