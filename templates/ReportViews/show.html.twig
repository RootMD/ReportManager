{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Reports View' }}
{% endblock %}
{% block body %}

    <table class="table table-striped table-primary span12">
        <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Github Issue</th>
            <th>Word done</th>
        </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr>
                <td>{{ report.date|date("Y-m-d") }}</td>
                <td>{{ report.time|date("H:i:s") }}</td>
                <td>{{ report.githubIssue }}</td>
                <td>{{ report.content }}</td>
                <td>
                    <a href="{{ path('editReport',{ id: report.id }) }}" class="btn btn-default btn-xs onEdit center-block">Edit</a>
                </td>
                <td>
                    <a href="{{ path('removeReport',{ id: report.id }) }}" class="btn btn-default btn-xs onRemove center-block">Remove</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
