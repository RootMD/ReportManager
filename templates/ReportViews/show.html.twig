{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Reports View' }}
{% endblock %}

{% block body %}

    <table class="table table-striped table-primary">
        <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Github Issue</th>
            <th>Word done</th>
        </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr>
                <td>{{ report.date|date("Y-m-d") }}</td>
                <td>{{ report.time|date("H:i:s") }}</td>
                <td>{{ report.githubIssue }}</td>
                <td>{{ report.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
